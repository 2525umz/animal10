<div class="row">
 <div class="col-lg-2">
  </div>
    <%= attachment_image_tag @item, :image, size: "200x200", fallback: "no_image.jpg"%>
 <div class="col-lg-1">
  </div>
<div class="col-lg-6">
          <p>商品名          <%= @item.name %></p>

          <p>商品説明        <%= @item.introduction %></p>

